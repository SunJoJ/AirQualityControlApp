<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/coordinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/top_appbar_menu_close"
                android:background="@color/primaryColor"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="2dp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp">

            <TextView
                android:id="@+id/indexTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="35dp"
                android:padding="30dp"
                android:text="Test"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:text="Test"
                android:textColor="@color/primaryTextColor"
                android:textSize="12dp" />

            <com.google.android.material.button.MaterialButton

                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:stateListAnimator="@null"
                app:backgroundTint="#00FFFFFF"
                app:borderWidth="0dp"
                app:icon="@drawable/ic_grade_24px"
                app:iconTint="@color/primaryTextColor" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:id="@+id/pollutionComponents"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/lightGray"
                android:padding="5dp"
                android:text="Czynniki zanieczyszczenia"
                android:textAlignment="center"
                android:textSize="18dp" />


            <ListView
                android:id="@+id/listOfPollutionComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
            </ListView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@drawable/rounded_corner">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </RelativeLayout>


    </LinearLayout>


</ScrollView>