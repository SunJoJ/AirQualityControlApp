<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/placeColorIndicator"
        android:layout_width="100dp"
        android:layout_height="165dp"
        android:background="@drawable/rounded_corner_yellow">

        <TextView
            android:id="@+id/placeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Praca"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iconType"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_below="@+id/placeType"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_work" />

        <TextView
            android:id="@+id/aqiData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconType"
            android:gravity="center_horizontal"
            android:text="35"
            android:textColor="@color/white"
            android:textSize="22dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aqiData"
            android:gravity="center_horizontal"
            android:text="AQI"
            android:textSize="11dp"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>