<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/cityNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:text="Test"
        android:textColor="@color/darkGray"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/addressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Test"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:elevation="5dp"/>


    <RelativeLayout
        android:id="@+id/quality"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="2dp"
        android:background="@drawable/rounded_corner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/primaryTextColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qualityIndex"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/qualityText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:firstBaselineToTopHeight="0dp"
                    android:lineSpacingExtra="0dp"
                    android:text="Indeks jakosci - bardzo dobry"
                    android:textSize="15dp" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:background="@drawable/rounded_corner">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/primaryTextColor"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/a01d"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <TextView
                android:id="@+id/tempText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:text="8"
                android:textSize="13dp"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.6"
                android:src="@drawable/water_droplet_icon"/>
            <TextView
                android:id="@+id/humidityText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:text="8"
                android:textSize="13dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/wind_icon"
                android:scaleX="0.7"
                android:scaleY="0.8"/>
            <TextView
                android:id="@+id/windSpeedText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:text="10"
                android:textSize="12dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text="Test"
        android:textColor="@color/gray"
        android:textSize="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <RelativeLayout
            android:id="@+id/firstAdviceIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/window"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondAdviceIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/firstAdviceIcon"
            android:background="@drawable/rounded_corner"
            android:elevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bike"
                android:scaleX="0.9"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adviceBackground"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:elevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/adviceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Test"
            android:textColor="@color/primaryTextColor"
            android:textSize="14dp"
            />


    </RelativeLayout>


</LinearLayout>